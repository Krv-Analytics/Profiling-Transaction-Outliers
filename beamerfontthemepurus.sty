\RequirePackage{fontspec}
\RequirePackage{fontenc}

\PassOptionsToPackage{T1}{fontenc}

\usefonttheme{default}
\usefonttheme{professionalfonts}

\usepackage{fourier}

\setmainfont{Alegreya Sans}
\setsansfont{Alegreya Sans}
\setmonofont[Scale=MatchLowercase]{IBM Plex Mono}

\setbeamerfont{title}              {series=\bfseries}
\setbeamerfont{frametitle}         {series=\bfseries}
\setbeamerfont{framesubtitle}      {series=\normalfont}
\setbeamerfont{block title}        {series=\bfseries}
\setbeamerfont{description item}   {series=\bfseries}
\setbeamerfont{author in head/foot}{family=\fontspec{Alegreya Sans Thin}}
\setbeamerfont{title in head/foot} {family=\fontspec{Alegreya Sans Thin}}
